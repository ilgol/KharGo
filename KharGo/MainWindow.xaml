<Window x:Class="KharGo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KharGo" WindowStartupLocation="CenterScreen" Height="400" Width="760" MinWidth="760" MinHeight="400" FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="rules_lb" ToolTip="Тут будут отображаться текущее задачи " Grid.Row="1" Grid.ColumnSpan="2"/>
        <Button x:Name="accept_bt" Content="Применить" Grid.Row="2" ClickMode="Press" TabIndex="4" Click="accept_bt_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFCDCDCD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="cancel_bt" Content="Отменить" Grid.Row="2" ClickMode="Press" TabIndex="5" Click="cancel_bt_Click" IsEnabled="False" Grid.Column="1">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFDDDDDD" Offset="1"/>
                    <GradientStop Color="#FFCDCDCD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <TextBox x:Name="execute_tb" TextWrapping="Wrap" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
