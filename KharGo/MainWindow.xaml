<Window x:Class="KharGo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KharGo" WindowStartupLocation="CenterScreen" Height="381.759" Width="758.506" MinWidth="710" MinHeight="300" FontSize="18">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="117*"/>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="58*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition Height="Auto" MinHeight="40"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="command_cb" Grid.Row ="1" ToolTip="Выберете команду" TabIndex="1" SelectedIndex="0" DropDownClosed="command_cb_DropDownClosed">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFDDDDDD" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
            <ComboBoxItem Content="Запустить"/>
            <ComboBoxItem Content="Воспроизвести"/>
            <ComboBoxItem Content="Загрузить"/>
        </ComboBox>
        <ComboBox x:Name="object_cb" Grid.Column="1" Grid.Row="1" ToolTip="Выберете объект для которого надо выполнить команду" TabIndex="2" IsEnabled="False" DropDownClosed="object_cb_DropDownClosed">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFCDCDCD" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <ComboBox x:Name="param_cb" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" ToolTip="Задайте параметры для выполнения команды" TabIndex="3" IsEnabled="False">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>
        <TextBox x:Name="command_tb" TextWrapping="Wrap" Text="Команда"/>
        <TextBox x:Name="object_tb" TextWrapping="Wrap" Text="Объект" Grid.Column="1" />
        <TextBox x:Name="param_tb" TextWrapping="Wrap" Text="Параметры" Grid.Column="2" Grid.ColumnSpan="2"/>
        <ListBox x:Name="rules_lb" Grid.Row="2" Grid.ColumnSpan="4" ToolTip="Тут будут отображаться текущее задачи " SelectionChanged="rules_lb_SelectionChanged"/>
        <Button x:Name="accept_bt" Content="Применить" Grid.Column="2" Grid.Row="3" ClickMode="Press" TabIndex="4" Click="accept_bt_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFCDCDCD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="cancel_bt" Content="Отменить" Grid.Column="3" Grid.Row="3" ClickMode="Press" TabIndex="5" Click="cancel_bt_Click" IsEnabled="False">
            <Button.Background>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFF3F3F3" Offset="1"/>
                    <GradientStop Color="#FFDDDDDD" Offset="1"/>
                    <GradientStop Color="#FFCDCDCD" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <CheckBox x:Name="checkBox" Content="Выключить подскази" HorizontalAlignment="Left" Grid.Row="3" VerticalAlignment="Top" Click="checkBox_Click"/>
        <TextBox x:Name="execute_tb" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap"/>

    </Grid>
</Window>
